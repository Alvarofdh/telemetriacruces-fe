# Configuración de la API del ESP32
# Copia este archivo a .env y configura tus valores

# URL base de la API del ESP32
# En desarrollo: http://viametrica.local o http://192.168.1.100
# En producción: https://tu-api-produccion.com
VITE_API_BASE_URL=http://viametrica.local

# Timeout para peticiones HTTP (en milisegundos)
VITE_API_TIMEOUT=5000

# Entorno de ejecución (development, production, staging)
VITE_APP_ENV=development

# Nombre de la aplicación
VITE_APP_NAME=Viametrica

# Versión de la aplicación
VITE_APP_VERSION=1.0.0

# Habilitar logs de debug (true/false)
VITE_DEBUG_MODE=false

# URL del mapa (opcional, para personalizar el proveedor de mapas)
VITE_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# Intervalo de actualización automática (en milisegundos)
VITE_REFRESH_INTERVAL=30000

# Credenciales de administrador por defecto (CAMBIAR EN PRODUCCIÓN)
VITE_ADMIN_USERNAME=admin
VITE_ADMIN_PASSWORD=admin123
