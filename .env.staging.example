# Configuración de Staging/Pruebas
# Este archivo es un ejemplo de las variables de entorno para el ambiente de staging

# URL base de la API del ESP32 en staging
VITE_API_BASE_URL=https://api-staging.tu-dominio.com

# Timeout para peticiones HTTP (en milisegundos)
VITE_API_TIMEOUT=5000

# Entorno de ejecución
VITE_APP_ENV=staging

# Nombre de la aplicación
VITE_APP_NAME=Viametrica (Staging)

# Versión de la aplicación
VITE_APP_VERSION=1.0.0-staging

# Habilitar logs de debug en staging
VITE_DEBUG_MODE=true

# URL del mapa
VITE_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# Intervalo de actualización automática (30 segundos)
VITE_REFRESH_INTERVAL=30000

# Credenciales de administrador para staging
VITE_ADMIN_USERNAME=admin_staging
VITE_ADMIN_PASSWORD=staging_password_123
