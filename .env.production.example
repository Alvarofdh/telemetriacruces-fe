# Configuración de Producción
# Este archivo es un ejemplo de las variables de entorno para producción
# Configura estas variables en Caprover o tu servidor de producción

# URL base de la API del ESP32 en producción
VITE_API_BASE_URL=https://api-produccion.tu-dominio.com

# Timeout para peticiones HTTP (en milisegundos)
VITE_API_TIMEOUT=5000

# Entorno de ejecución
VITE_APP_ENV=production

# Nombre de la aplicación
VITE_APP_NAME=Viametrica

# Versión de la aplicación
VITE_APP_VERSION=1.0.0

# Deshabilitar logs de debug en producción
VITE_DEBUG_MODE=false

# URL del mapa
VITE_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# Intervalo de actualización automática (30 segundos)
VITE_REFRESH_INTERVAL=30000

# Credenciales de administrador (CAMBIAR POR VALORES SEGUROS)
VITE_ADMIN_USERNAME=admin_produccion
VITE_ADMIN_PASSWORD=password_muy_seguro_123!
